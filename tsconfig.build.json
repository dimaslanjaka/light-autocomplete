{
  "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "strict": false,
      "strictNullChecks": true,
      "outDir": "dist/types",
      "moduleResolution": "Node",
      "allowJs": true,
      "types": ["jquery", "node"],
      "target": "ES5",
      "lib": ["DOM", "ES5", "ES6", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"]
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "node_modules"]
}